#include<bits/stdc++.h>
using namespace std;

vector<int>seg;

void update(int idx, int val, int i, int l, int r){
    if(l == r){
        seg[i] = val;
        return;
    }
    
    int mid = l+(r-l)/2;
    
    if(idx <= mid){
        update(idx, val, 2*i+1, l, mid);
    }
    else{
        update(idx, val, 2*i+2, mid+1, r);
    }
    
    seg[i] = seg[2*i+1]+seg[2*i+2];
}


void buildTree(int i, vector<int>&nums, int l, int r){
    if(l == r){
        seg[i] = nums[l];
        return;
    }
    int mid = l+(r-l)/2;
    
    buildTree(2*i+1, nums, l, mid);
    buildTree(2*i+2, nums, mid+1, r);
    
    seg[i] = seg[2*i+1]+seg[2*i+2];
}

int main(){
    string input;
    getline(cin, input);
    stringstream ss(input);
    string token;
    vector<int>nums;
    while(getline(ss, token, ' ')){
        nums.push_back(stoi(token));
    }
    
    int n = nums.size();
    seg.resize(2*n-1);
    buildTree(0, nums,0, n-1);
    
    for(int i = 0; i < 2*n-1; i++){
        cout<<seg[i]<<" ";
    }
    cout<<endl;
    update(4, 7, 0, 0, 2*n-1);
    
    for(int i = 0; i < 2*n-1; i++){
        cout<<seg[i]<<" ";
    }
    return 0;
    
}
